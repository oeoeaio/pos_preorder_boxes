<?xml version="1.0" encoding="UTF-8"?>
<templates id="preorders.boxes.template" xml:space="preserve">

    <t t-name="PreorderLine" t-inherit="pos_preorders.PreorderLine" t-inherit-mode="extension" owl="1">
        <xpath expr="//td[hasclass('customer')]" position="after">
            <td class='box_size'><t t-esc='props.preorder.box_size' /></td>
        </xpath>
    </t>

    <t t-name="PreorderListScreen" t-inherit="pos_preorders.PreorderListScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//th[hasclass('customer')]" position="after">
            <th class='box_size'>Box Size</th>
        </xpath>
    </t>
</templates>
